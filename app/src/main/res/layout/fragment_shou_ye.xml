<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ShouYeFragment">
    <ViewFlipper
        android:id="@+id/flipper"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:flipInterval="2000"
        android:layout_alignParentTop="true"
        >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="fitXY"
            android:src="@drawable/one" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="fitXY"
            android:src="@drawable/two"
            />
        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:scaleType="fitXY"
            android:src="@drawable/three"
            />

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:scaleType="fitXY"
            android:src="@drawable/fore" />
    </ViewFlipper>
    <RelativeLayout
        android:id="@+id/rl"
        android:layout_below="@+id/flipper"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        >

        <ImageView
            android:id="@+id/im_data"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_marginLeft="20dp"
            android:src="@drawable/date" />
        <ImageView
            android:id="@+id/im_redio"
            android:layout_toRightOf="@+id/im_data"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:src="@drawable/redio"
            android:layout_marginLeft="40sp"
            />
        <ImageView
            android:id="@+id/im_song"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_toRightOf="@+id/im_redio"
            android:src="@drawable/song"
            android:layout_marginLeft="40dp"
            />
        <ImageView
            android:id="@+id/im_list"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/im_song"
            android:src="@drawable/list"
            android:layout_marginLeft="40sp"
            />
        <TextView
            android:layout_below="@+id/im_data"
            android:layout_marginLeft="20sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="每日推荐"
            android:textSize="15dp"
            />
        <TextView
            android:layout_below="@+id/im_data"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="电台"
            android:textSize="15dp"
            android:layout_marginLeft="140dp"
            />
        <TextView
            android:layout_below="@+id/im_data"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="歌单"
            android:textSize="15dp"
            android:layout_marginLeft="240dp"
            />
        <TextView
            android:layout_below="@+id/im_data"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="排行榜"
            android:textSize="15dp"
            android:layout_marginLeft="340dp"
            />
    </RelativeLayout>
    <LinearLayout
        android:layout_marginTop="180dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="发现好歌单"
            android:textSize="20dp"
            />
        <Button
            android:id="@+id/btn_more"
            android:background="@drawable/button_genduo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="查看更多"
            android:textSize="20dp"
            android:layout_marginLeft="200dp"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="230dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <ImageView
            android:id="@+id/im_taheta"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/taheta"
            android:layout_marginLeft="20dp"
            />
        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginLeft="30dp"
            android:src="@drawable/zhifou"
            />
        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/fore"
            android:layout_marginLeft="30dp"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="330dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="好好去爱这个世界，因为你值得"
            android:layout_marginLeft="20dp"
            />
        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="今天从“知否知否”开始听起"
            android:layout_marginLeft="30dp"
            />
        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="这样的周杰伦，你喜欢吗"
            android:layout_marginLeft="30dp"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="380dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/danche"
            android:layout_marginLeft="20dp"
            />
        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginLeft="30dp"
            android:src="@drawable/chengquan"
            />
        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/dayu"
            android:layout_marginLeft="30dp"
            />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/xiadao"
        android:layout_marginTop="480dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="精品粤语歌"
            android:layout_marginLeft="30dp"
            />
        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="成全了你，我怎么办"
            android:layout_marginLeft="30dp"
            />
        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="总有一个你喜欢的周深"
            android:layout_marginLeft="30dp"
            />
    </LinearLayout>
    <RelativeLayout
        android:layout_marginTop="600dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <RadioGroup
            android:id="@+id/tabs_rg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <RadioButton
                android:id="@+id/btn_faxian"
                android:layout_width="50sp"
                android:layout_height="50dp"
                style="@style/RadioButton"
                />
            <RadioButton
                android:layout_toRightOf="@+id/btn_shipin"
                android:id="@+id/btn_shipin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="视频"
                />
            <RadioButton
                android:id="@+id/btn_yuncun"
                android:layout_toRightOf="@+id/btn_shipin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="云村"
                />
            <RadioButton
                android:id="@+id/btn_my"
                android:layout_toRightOf="@+id/btn_yuncun"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="我的"
                />
            <RadioButton
                android:id="@+id/btn_zhanghao"
                android:layout_toRightOf="@+id/btn_my"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="账号"
                />
        </RadioGroup>
    </RelativeLayout>
</RelativeLayout>